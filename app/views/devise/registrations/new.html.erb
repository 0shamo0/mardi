<div class="container" style="margin-top: 50px">

<div class="card">
<div class="card-body">

    <h2>Enregistrer une nouvelle Ã©quipe</h2>

    <h2>Enregistrement non possible</h2>

<% if current_user == true %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="form-group row">
            <%= f.label :email,:class => "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
          </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :mot_de_passe,:class => "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <% if @minimum_password_length <= 6 %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => "(6 characters minimum)" %>
          </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :password_confirmation,:class => "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => "(6 characters minimum)" %>
          </div>
          </div>
          
          <div class="form-group row">
            
            <div class="col-sm-10">
              <%= f.submit "Sign up", :class => "btn btn-primary btn-sm", :style => "color: white; float: left; margin-left: 20px;" %>
            </div>
           
          </div>
<% end %>
  
<% end %>

</div>

</div>
</div>