<div class="container" style="margin-top: 50px">

<div class="card">
<div class="card-body">
  
<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row">
    <%= f.label :email,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :mot_de_passe,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group row">
    <%= f.label :se_souvenir_de_moi, :class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= f.check_box :remember_me, :style => "margin-top: 14px" %>
  </div>
  </div>
  
  <% end %>
  
  <div class="actions">
    <%= f.submit "Valider", :class => "btn btn-primary btn-sm" %>
  </div>
<% end %>

</div>

</div>
</div>