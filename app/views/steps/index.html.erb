<div class="container" style="padding-bottom: 100px">
<p id="notice"><%= notice %></p>

<h1>Etape</h1>

<table class="table">
  <thead>
    <tr>
      <th>Step name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.step_name %></td>
        <td><%= link_to 'voir', step %></td>
        <td><%= link_to 'modifier', edit_step_path(step) %></td>
        <td><%= link_to 'supprimer', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

